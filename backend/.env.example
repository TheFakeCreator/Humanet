# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/humanet

# Authentication Secrets
# Generate secure secrets with: openssl rand -hex 64
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
ENABLE_RATE_LIMITING=true

# Security Headers & CORS
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
TRUST_PROXY=true

# CORS Configuration (comma-separated allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Monitoring
LOG_SECURITY_EVENTS=true
BLOCK_SUSPICIOUS_IPS=false

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-app-password

# Optional: File Upload Configuration
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=uploads

{
  "name": "humanet",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "lint": "pnpm -w lint",
    "test": "pnpm -w test",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "lint-staged": "lint-staged",
    "seed": "pnpm --filter backend seed",
    "seed:clear": "pnpm --filter backend seed:clear",
    "seed:small": "pnpm --filter backend seed:small",
    "seed:medium": "pnpm --filter backend seed:medium",
    "seed:large": "pnpm --filter backend seed:large",
    "seed:production": "pnpm --filter backend seed:production",
    "db:backup": "pnpm --filter backend db:backup",
    "db:restore": "pnpm --filter backend db:restore",
    "db:analyze": "pnpm --filter backend db:analyze",
    "db:cleanup": "pnpm --filter backend db:cleanup",
    "db:cleanup:dry": "pnpm --filter backend db:cleanup:dry",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:export-stats": "pnpm --filter backend db:export-stats"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "lucide-react": "^0.542.0"
  }
}
